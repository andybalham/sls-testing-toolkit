{
  "StartAt": "GetCreditRating",
  "States": {
    "GetCreditRating": {
      "Next": "CheckCreditRating",
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "MaxAttempts": 2
        }
      ],
      "Catch": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "Next": "HandleCreditRatingError"
        }
      ],
      "Type": "Task",
      "ResultPath": "$.creditRating",
      "Resource": "${Token[TOKEN.423]}",
      "Parameters": {
        "firstName.$": "$.loanDetails.firstName",
        "lastName.$": "$.loanDetails.lastName",
        "postcode.$": "$.loanDetails.postcode"
      }
    },
    "CheckCreditRating": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.creditRating.value",
          "StringEquals": "GOOD",
          "Next": "AcceptLoan"
        }
      ],
      "Default": "DeclineLoan"
    },
    "DeclineLoan": {
      "Type": "Pass",
      "Next": "BuildDeclinedEvent"
    },
    "BuildDeclinedEvent": {
      "Next": "PublishDeclinedEvent",
      "Type": "Task",
      "InputPath": "$.loanDetails",
      "ResultPath": "$.declinedEvent",
      "Resource": "${Token[TOKEN.672]}"
    },
    "PublishDeclinedEvent": {
      "End": true,
      "Type": "Task",
      "Resource": "arn:${Token[AWS.Partition.6]}:states:::sns:publish",
      "Parameters": {
        "TopicArn": "${Token[TOKEN.527]}",
        "Message.$": "$.declinedEvent"
      }
    },
    "AcceptLoan": {
      "Type": "Pass",
      "Next": "BuildLoanItem"
    },
    "BuildLoanItem": {
      "Next": "PutLoanItem",
      "Type": "Task",
      "InputPath": "$.loanDetails",
      "ResultPath": "$.loanItem",
      "Resource": "${Token[TOKEN.650]}"
    },
    "PutLoanItem": {
      "End": true,
      "Type": "Task",
      "InputPath": "$.loanItem",
      "Resource": "arn:${Token[AWS.Partition.6]}:states:::dynamodb:putItem",
      "Parameters": {
        "Item": {
          "id": {
            "S.$": "$.id"
          },
          "loanDetails": {
            "M.$": "$.loanDetails"
          }
        },
        "TableName": "${Token[TOKEN.517]}"
      }
    },
    "HandleCreditRatingError": {
      "Type": "Pass",
      "Result": "CreditRating",
      "ResultPath": "$.Source",
      "Next": "ExtractErrorCause"
    },
    "ExtractErrorCause": {
      "Next": "SendErrorMessage",
      "Type": "Task",
      "ResultPath": "$.Cause",
      "Resource": "${Token[TOKEN.694]}"
    },
    "SendErrorMessage": {
      "Next": "CreditRatingFailure",
      "Type": "Task",
      "Resource": "arn:${Token[AWS.Partition.6]}:states:::sqs:sendMessage",
      "Parameters": {
        "QueueUrl": "${Token[TOKEN.538]}",
        "MessageBody": {
          "Source.$": "$.Source",
          "Cause.$": "$.Cause"
        }
      }
    },
    "CreditRatingFailure": {
      "Type": "Fail",
      "Cause": "CreditRating"
    }
  }
}